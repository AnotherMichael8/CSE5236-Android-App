<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Ripple color -->

    <!-- Custom Background Shape with Gradient, Corners, and Outline -->
    <item>
        <shape>
            <!-- Background -->
            <gradient
                android:startColor="#505059"
                android:endColor="#35353B"
                android:angle="270"/>
            <!-- Rounded Corners -->
            <corners android:radius="15dp" />
            <!-- Outline -->
            <stroke android:width="2dp" android:color="#E3E3FC" />
        </shape>
    </item>
</ripple>
