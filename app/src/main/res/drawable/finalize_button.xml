<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Ripple color -->

    <!-- Custom Background Shape with Solid Color, Corners, and Outline -->
    <item>
        <shape>
            <!-- Background -->
            <solid android:color="#B00400" />
            <!-- Rounded Corners -->
            <corners android:radius="8dp" />
            <!-- Outline -->
            <stroke android:width="2dp" android:color="#C2B7D4" />
        </shape>
    </item>
</ripple>
